{
  "ecmaFeatures": {
    "modules": true,
    "jsx": false
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__ENV__": true
  },
  "rules": {
    "complexity": [1, 10],
    "no-bitwise": 2,
    "camelcase": [2, { "properties": "never" }],
    "curly": [2, "all"],
    "eqeqeq": 2,
    "wrap-iife": 2,
    "indent": 2,
    "no-use-before-define": 2,
    "new-cap": 2,
    "no-caller": 2,
    "quotes": [2, "single"],
    "strict": [2, "global"],
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-empty": 2,
    "comma-dangle": [2, "never"],
    "max-len": [1, 220],
    "comma-style": [2, "last"],
    "dot-notation": 2,
    "brace-style": [2, "1tbs", { "allowSingleLine": false }],
    "one-var": [2, "never"],
    "operator-linebreak": [2, "after"],
    "space-infix-ops": 2,
    "space-before-blocks": [2, "always"],
    "semi": [2, "never"],
    "eol-last": 2
  }
}
